<h1>Duel Time!</h1>

<!--______________-->
<div class="Eka">
  <!-- This seems rather hacky way to do this, but oh well for now it goes.-->
  <% @trip = @trip1 %>
  <%= render partial: "arenacorner" %>
</div>
<!--______________-->
<div class="form">
  <%= form_tag("/arena", method: "post") do  %>

  <div class="field">
    <div class="radios" >
      <%= label_tag(:toggle_, "Left one!", :style => "display:inline") %>
      <%= radio_button_tag(:toggle, @tripIds[1], autofocus: true) %>
    </div>

    <div class="radios" >
      <%= label_tag(:trip2, "Right one!",:style => "display:inline") %>
      <%= radio_button_tag(:toggle, @tripIds[0]) %>
    </div>
  </div>

  <div class = "field">
    <%= hidden_field_tag("left", @tripIds[0]) %>
    <%= hidden_field_tag("right", @tripIds[1]) %>
    <%= submit_tag("Lay down your judgement!") %>
  </div>
<% end %>

</div>
<!--______________-->
<div class="Toka">
  <% @trip = @trip2 %>
  <%= render partial: "arenacorner" %>
</div>
