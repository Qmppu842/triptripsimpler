<p id="notice"><%= notice %></p>

<h1>Trips</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th><%= link_to 'Start', trips_path(order:"start")%></th>
      <th><%= link_to 'End', trips_path(order:"end")%></th>
      <th><%= link_to 'Length', trips_path(order:"length")%></th>
      <th><%= link_to 'Elo', trips_path(order:"elo")%></th>
      <!--<th>Link</th>-->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trips.each do |trip| %>
      <tr>
        <td><%= trip.start %></td>
        <td><%= trip.end %></td>
        <td><%= trip.length %></td>
        <td><%= trip.elo %></td>
        <!--<td><%= trip.link %></td>-->
        <td><%= link_to 'Show', trip %></td>
        <td><%= link_to 'Edit', edit_trip_path(trip) %></td>
        <td><%= link_to 'Destroy', trip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

